{
    "name": "kata/template",
    "description": "PHP kata template",
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Kata\\Playground\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Kata\\Test\\Playground\\": "test/"
        }
    },
    "authors": [
        {
            "name": "Anthony Rey",
            "email": "arey@ippon.fr"
        }
    ],
    "scripts": {
        "test": "phpunit --coverage-html coverage --coverage-text",
        "test:with-branches": "phpunit -d memory_limit=-1 --path-coverage --coverage-html coverage --coverage-text"
    }
}
